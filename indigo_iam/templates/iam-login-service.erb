# Java VM arguments
IAM_JAVA_OPTS=-Dspring.profiles.active=<%= @active_profiles %> <%= @java_opts %>

# Generic options
IAM_BASE_URL=<%= @iam_base_url %>
IAM_ISSUER=<%= @iam_issuer %>
IAM_USE_FORWARDED_HEADERS=<%= @iam_use_forwarded_headers %>
IAM_ORGANISATION_NAME=<%= @iam_organisation_name %>
<% if defined?(@iam_key_store_location) -%>
IAM_KEY_STORE_LOCATION=file://<%= @iam_key_store_location %>
<% end -%>

# Database connection settings
IAM_DB_HOST=<%= @iam_db_host %>
IAM_DB_PORT=<%= @iam_db_port %>
IAM_DB_NAME=<%= @iam_db_schema %>
IAM_DB_USERNAME=<%= @iam_db_username %>
IAM_DB_PASSWORD=<%= @iam_db_password %>
IAM_DB_VALIDATION_QUERY=SELECT 1

## Google profile settings
IAM_GOOGLE_CLIENT_ID=<%= @iam_google_client_id %>
IAM_GOOGLE_CLIENT_SECRET=<%= @iam_google_client_secret %>
IAM_GOOGLE_REDIRECT_URIS=<%= @iam_google_redirect_uris %>

## SAML profile settings
IAM_SAML_ENTITY_ID=<%= @iam_saml_entity_id %>
<% if defined?(@iam_saml_keystore) -%>
IAM_SAML_KEYSTORE=file://<%= @iam_saml_keystore %>
<% end -%>
IAM_SAML_KEYSTORE_PASSWORD=<%= @iam_saml_keystore_password %>
IAM_SAML_KEY_ID=<%= @iam_saml_key_id %>
IAM_SAML_KEY_PASSWORD=<%= @iam_saml_key_password %>
<% if defined?(@iam_saml_idp_metadata) -%>
IAM_SAML_IDP_METADATA=file://<%= @iam_saml_idp_metadata %>
<% end -%>

# Notification settings
IAM_NOTIFICATION_DISABLE=<%= @iam_notification_disable %>
IAM_NOTIFICATION_FROM=<%= @iam_notification_from %>
IAM_NOTIFICATION_TASK_DELAY=<%= @iam_notification_task_delay %>
IAM_NOTIFICATION_ADMIN_ADDRESS=<%= @iam_notification_admin_address %>
IAM_MAIL_HOST=<%= @iam_mail_host %>
